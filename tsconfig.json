{
    "compilerOptions": {
	    "suppressImplicitAnyIndexErrors": true,
        "importHelpers": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "outDir": "dist/",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": true,
        "lib": [
            "dom",
            "es2015.collection",
            "es2015.promise",
            "es5"
        ],
        "moduleResolution": "node",
		"typeRoots": [ "../node_modules/@types" ]
    },
    "exclude": [
        "node_modules"
    ]
}